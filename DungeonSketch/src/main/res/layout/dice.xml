<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/dice_control_column">
    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/dice_d4"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@drawable/d4"
        android:scaleType="fitCenter"
        android:padding="4dp" />
    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/dice_d6"
        android:layout_row="1"
        android:layout_column="0"
        android:src="@drawable/d6"
        android:scaleType="fitCenter"
        android:padding="4dp"  />
    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/dice_d8"
        android:layout_row="2"
        android:layout_column="0"
        android:src="@drawable/d8"
        android:scaleType="fitCenter"
        android:padding="4dp"  />
    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/dice_d10"
        android:layout_row="3"
        android:layout_column="0"
        android:src="@drawable/d10"
        android:scaleType="fitCenter"
        android:padding="4dp"  />
    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/dice_d12"
        android:layout_row="4"
        android:layout_column="0"
        android:src="@drawable/d12"
        android:scaleType="fitCenter"
        android:padding="4dp"  />
    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/dice_d20"
        android:layout_row="5"
        android:layout_column="0"
        android:src="@drawable/d20"
        android:scaleType="fitCenter"
        android:padding="4dp"  />
    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/dice_d100"
        android:text="@string/percent"
        android:layout_row="6"
        android:layout_column="0"
        android:textSize="24sp"/>
    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/dice_clear"
        android:text="@string/clear"
        android:layout_row="7"
        android:layout_column="0"
        android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>